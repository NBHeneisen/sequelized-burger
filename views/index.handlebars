<div class="jumbotron">
    <h1>Welcome to Good Burger, home of the Good Burger, can I take your order?</h1>
</div>
<div class="container">
    <div class="row">
        <div class="burgers col-md-4">
            {{#each result}}
                {{#unless this.devoured}}
                        <p>
                            {{burger_name}}
                        </p>
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                        <button type = "submit" class="btn btn-danger">Devour</button>
                        </form>
                {{/unless}}
            {{/each}}
        </div>
        <div class="form-group submitBurger col-md-4">
            <form action="/add" method="POST">
                <textarea name="burger_name" cols="30" rows="10" placeholder="Order your burger here!"></textarea><br>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
        <div class = "devoured col-md-4">
            {{#each result}}
                {{#if this.devoured}}
                        <p>
                            {{burger_name}}
                        </p>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>
